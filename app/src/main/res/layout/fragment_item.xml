<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"


    android:padding="10dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="5"
            android:textAppearance="?attr/textAppearanceListItem"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:paddingLeft="10dp"

        android:weightSum="9">

        <TextView
            android:id="@+id/contentWork"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"

            android:drawableStart="@drawable/ic_fitness_center_black_24px"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/contentRest"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:drawableLeft="@drawable/ic_pan_tool_black_24dp"

            android:textSize="25dp" />

        <TextView
            android:id="@+id/contentReps"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:drawableLeft="@drawable/ic_close_black_24dp"

            android:textSize="25dp" />

    </LinearLayout>
</LinearLayout>
