<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timer_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="15">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textAlignment="center"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timerWork"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/ic_fitness_center_black_24px"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/timerRest"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/ic_pan_tool_black_24dp"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/timerReps"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/ic_close_black_24dp"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>


        <Chronometer
            android:id="@+id/chronometer2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textAlignment="center"
            android:textSize="70dp" />

        <TextView
            android:id="@+id/tvTimerStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"

            android:text="@string/btn_start" />

    </LinearLayout>
</LinearLayout>

